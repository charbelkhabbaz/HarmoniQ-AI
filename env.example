GEMINI_API_KEY=API_KEY_HERE


OPENROUTER_API_KEY=API_KEY_HERE
OPENROUTER_MODEL=MODEL_HERE

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=DB_HOST_HERE
DB_PORT=DB_PORT_HERE
DB_USER=DB_USER_HERE
DB_PASSWORD=PASSWORD_HERE
DB_NAME=DB_NAME_HERE

# ============================================
# OPTIONAL: OPENAI API (if using OpenAI instead of Gemini)
# Used by some standalone scripts (e.g. transcribe.py, mood_classifier.py)
# ============================================
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# ADDITIONAL MUSIC RECOGNITION MODULE (optional)
# Located in: additional/MusicRecognition-main
#
# These keys are required if you want to use the extra tools:
# - recognize_and_analyze_song
# - convert_lyrics_to_singing
# - query_music_theory_rag
#
# They can live in this .env at the project root; the additional
# package will pick them up via environment variables.
# ============================================

# AudD API token for song recognition
# Get a key from: https://audd.io/
# Required for: recognize_and_analyze_song
# AUDD_API_TOKEN=your_audd_api_token_here

# ElevenLabs API key for text-to-singing (SingerAgent)
# Sign up at: https://elevenlabs.io/
# Required for: convert_lyrics_to_singing
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Spotify API (optional, for richer metadata in recognition)
# Create an app at: https://developer.spotify.com/dashboard
# Optional for: recognize_and_analyze_song (Spotify metadata)
# SPOTIPY_CLIENT_ID=your_spotify_client_id_here
# SPOTIPY_CLIENT_SECRET=your_spotify_client_secret_here

